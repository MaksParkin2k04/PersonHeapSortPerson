<Window x:Class="PersonHeapSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonHeapSort"
        mc:Ignorable="d" Title="Сортировка" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Name="buttonAsk" Content="Ask" Click="AskButtonClick" Width="75" Height="25" Margin="0 0 5 0" />
            <Button Name="buttonDesk" Content="Desk" Click="DeskButtonClick" Width="75" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
